# Copy this file to .env and fill in values

# URL base prefix for both client (Vite base, Nginx) and server routes
HOME_DIRECTORY=/parse

# Azure AD (Entra ID) App Registration
AZURE_CLIENT_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_SECRET=

# Flask session secret (any random string)
FLASK_SECRET_KEY=please-change-me

# Cookie security settings
# Use true when serving over HTTPS, false for local HTTP
SESSION_COOKIE_SECURE=false
# Options: Lax, Strict, None (set None only if you truly need cross-site)
SESSION_COOKIE_SAMESITE=Lax

